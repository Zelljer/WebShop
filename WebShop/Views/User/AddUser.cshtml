@using WebShop.Models;
@model User;

@{
	ViewData["Title"] = "Добавить пользователя";
}

<h1>Добваить пользователя</h1>

<div class="row">
	<div class="col">
		@using (Html.BeginForm("AddUser", "User", FormMethod.Post))
		{
			<div class="row">
				<div class="row">
					<div class="row">
						<label>Фамилия</label>
						@Html.TextBoxFor(x => x.UserSurname, "", new { @class = "form-control", @placeholder = "", @id = "UserSurname" })
					</div>
				</div>
			</div>
			<div class="row">
				<div class="row">
					<div class="row">
						<label>Имя</label>
						@Html.TextBoxFor(x => x.UserName, "", new { @class = "form-control", @placeholder = "", @id = "UserName" })
					</div>
				</div>
			</div>
			<div class="row">
				<div class="row">
					<div class="row">
						<label>Отчество</label>
						@Html.TextBoxFor(x => x.UserPantonymic, "", new { @class = "form-control", @placeholder = "", @id = "UserPantonymic" })
					</div>
				</div>
			</div>
			<div class="row">
				<div class="row">
					<div class="row">
						<label>Логин</label>
						@Html.TextBoxFor(x => x.UserLogin, "", new { @class = "form-control", @placeholder = "", @id = "UserLogin" })
					</div>
				</div>
			</div>
			<div class="row">
				<div class="row">
					<div class="row">
						<label>Пароль</label>
						@Html.TextBoxFor(x => x.UserPassword, "", new { @class = "form-control", @placeholder = "", @id = "UserPassword" })
					</div>
				</div>
			</div>
			<div class="row">
				<div class="row">
					<div class="row">
						<label>Номер телефона</label>
						@Html.TextBoxFor(x => x.UserPhoneNumber, "", new { @class = "form-control", @placeholder = "", @id = "UserPhoneNumber" })
					</div>
				</div>
			</div>
			<div class="row">
				<div class="row">
					<div class="row">
						<label>Баланс</label>
						@Html.TextBoxFor(x => x.UserMoney, "", new { @class = "form-control", @placeholder = "", @id = "UserMoney" })
					</div>
				</div>
			</div>
			<div class="row">
				<div class="row">
					<div class="row">
						<label>Роль</label>
						<select asp-for="UserRole.Id" class="form-control" id="UserRoleLst">
							@foreach (var item in ViewBag.RoleList)
							{
								<option value=@item.Id>@item.RoleName</option>
							}
						</select>
					</div>
				</div>
			</div>
			<br />
			<div class="row">
				<div class="row">
					<div class="row">
						<button style="width:125px" class="btn btn-success" type="submit">Сохранить</button>
					</div>
				</div>
			</div>
		}
	</div>
</div>

